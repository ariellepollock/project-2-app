<%- include('../partials/header') %>

    <style>
        .transparent-card {
            background-color: rgba(255, 255, 255, 0)
        }
    </style>

    <h2 class="LHeader">My Watchlists</h2>

    <!-- Watchlists -->
    <div class="container">
        <div class="row justify-content-center text-center">
            <% watchlists.forEach(function(w) {%>
                <div class="col-12 mb-3">
                    <div class="card mt-2 listCard w-100 transparent-card">
                        <div class="card-body d-flex align-items-center justify-content-center">
                                <a href="/watchlists/<%= w.id %>" class="card-link">
                                    <h4 class="card-title wList"><%= w.title %></h4>
                                </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Add New Watchlist Form -->
    <form method="POST" action="/watchlists" class="mt-4 mb-5 mx-5">
        <div class="d-flex align-items-center g-2">
            <div class="flex-grow-1 me-2">
                <input type="text" class="form-control" id="name" name="name" placeholder="Watchlist Name" required>
            </div>
            <button type="submit" class="btn btn-color">Create Watchlist</button>
        </div>
    </form>

<%- include('../partials/footer') %>
